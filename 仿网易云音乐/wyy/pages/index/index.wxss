/* pages/index/index.wxss */
.index_swiper image {
    width: 100%;
    height: 100%;
  }
  
  .index_nav {
    display: flex;
  }
  
  .index_nav .nav_item {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin: 20rpx 0;
  }
  
  .index_nav .nav_item .iconfont {
    width: 100rpx;
    height: 100rpx;
    background-color: #f01313;
    text-align: center;
    line-height: 100rpx;
    color: #fff;
    font-size: 50rpx;
    border-radius: 50%;
  
  }
  
  .index_nav .nav_item text {
    font-size: 26rpx;
    margin-top: 20rpx;
  }
  
  .recommendList {
    padding: 0 20rpx;
  }
  
  .recommendList  .recScroll{
    display: flex;
    height: 300rpx;
  }
  .recommendList .recItem {
    width: 200rpx;
    margin-right: 20rpx;
  }
  .recommendList .recItem image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
  }
  
  .recommendList .recItem text{
    font-size: 26rpx;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;
  }
  
  .top_con{
    padding: 0 20rpx;
  }
  .top_con swiper{
    height: 400rpx;
  }
  .top_con .s_item .title{
    font-size: 24rpx;
    margin-bottom: 20rpx;
  }
  .top_con image{
    width: 100rpx;
    height: 100rpx;
    border-radius: 10rpx;
  }
  .top_con .m_item{
    display: flex;
    margin-bottom: 20rpx;
  }
  .top_con .m_item view:nth-of-type(1){
    width: 100rpx;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
  
  }
  .top_con .m_item view:nth-of-type(2){
    height: 100rpx;
    line-height: 100rpx;
  }