<!--pages/video/video.wxml-->
<view class="videoCon" >
    <view class="header">
        <image  src="/static/images/video/video.jpg" ></image>
        <view class="search">光辉岁月</view>
        <image class="" src="/static/images/logo.png"></image>
    </view>

    <scroll-view class="navScroll" scroll-x  scroll-into-view="{{'ss' + navId}}" scroll-with-animation enable-flex>
        <view class="navItem" wx:for="{{navList}}" wx:key="id"
            data-index="{{index}}"  bindtap="navItemTap"
            data-id="{{item.id}}"
            id="{{'ss' + item.id}}"
        >
            <text class="{{index === activeIndex ? 'active' : ''}}">{{item.name}}</text>
        </view>
    </scroll-view>

    <!--视频-->
    <scroll-view class="videoScroll"  scroll-y >
        <view class="videoBox" wx:for="{{videoList}}" wx:key="index">
            <video src="{{item.urlInfo.url}}" autoplay class="common" wx:if="{{item.vid === currentVid}}"></video>
            <image class="common" src="{{item.coverUrl}}" wx:else data-vid="{{item.vid}}" bindtap="vItemTap"> </image>

            <view class="title">{{item.title}}</view>
            <view class="footer">
                <image class="avatar" src="{{item.creator.avatarUrl}}"> </image>
                <text class="nickname">{{item.creator.nickname}}</text>
                <view class="comments_praised">
                    <text class="item">
                        <text class="iconfont icon-buoumaotubiao15"></text>
                        <text class="count">{{item.praisedCount}}</text>
                    </text>
                    <text class="item">
                        <text class="iconfont icon-pinglun1"></text>
                        <text class="count">{{item.commentCount}}</text>
                    </text>
                    <button open-type="share" class="item btn">
                        <text class="iconfont icon-gengduo"></text>
                    </button>
                </view>
            </view>
        </view>
        
    </scroll-view>
</view>
